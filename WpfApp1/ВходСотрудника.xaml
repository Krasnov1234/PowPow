        <PasswordBox x:Name="txt_Пароль" HorizontalAlignment="Left" Height="21" 
            VerticalAlignment="Top" Width="119" Margin="30,94,0,0"/>
        <TextBox x:Name="txt_Логин" HorizontalAlignment="Left" Height="21" TextWrapping="Wrap" Text="" 
            VerticalAlignment="Top" Width="119" Margin="30,52,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF7F7F7"><Run Language="ru-ru" Text="Логин"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="40,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="81" Foreground="#FFF7F3F3"><Run Language="ru-ru" Text="Пароль"/></TextBlock>

    </Grid>
</Window>
